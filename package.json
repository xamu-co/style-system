{
  "name": "@xamu-co/styles",
  "version": "2.1.0",
  "description": "Style system for the xamu project",
  "main": "dist/index.css",
  "browser": "dist/index.min.css",
  "source": "src/index.scss",
  "scripts": {
    "sass": "sass src/index.scss dist/index.css",
    "postcss": "postcss dist/index.css -o dist/index.min.css --no-map",
    "build": "yarn sass && yarn postcss --verbose",
    "watch": "yarn sass --watch",
    "test": "stylelint src/{*,**/*,**/**/*}.{css,scss} --syntax=scss && cross-env prettier 'src/{*,**/*,**/**/*}.{css,scss}' --check",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xamu-co/style-system.git"
  },
  "keywords": [
    "style",
    "css",
    "style",
    "system",
    "sass",
    "postcss",
    "csso"
  ],
  "author": "@vis97c",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xamu-co/style-system/issues"
  },
  "homepage": "https://github.com/xamu-co/style-system#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "autoprefixer": "^9.8.6",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "postcss-cli": "^7.1.1",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-custom-properties": "^9.1.1",
    "postcss-merge-selectors": "vis97c/postcss-merge-selectors",
    "postcss-precision": "^1.0.0",
    "prettier": "^2.0.5",
    "sass": "^1.26.10",
    "semantic-release": "^17.1.1",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.1.2"
  },
  "engines": {
    "node": ">=12.13.1",
    "yarn": ">=1.22.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && yarn sass"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": true,
    "endOfLine": "auto",
    "requirePragma": true,
    "insertPragma": false
  },
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "indentation": null
    }
  },
  "browserslist": [
    "defaults",
    "not ie < 11",
    "last 2 versions",
    "> 1%",
    "iOS 7",
    "last 3 iOS versions"
  ]
}